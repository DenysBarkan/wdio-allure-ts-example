{
  "name": "wdio-allure-ts-example",
  "version": "0.0.1",
  "description": "Example of wdio-allure-ts usage with wdio, allure, typescript",
  "license": "MIT",
  "author": "Felix Zilber <felix@cloudinary.com>",
  "homepage": "http://cloudinary.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/CloudinaryLtd/wdio-allure-ts-example"
  },
  "keywords": [
    "cloudinary",
    "allure",
    "reporter",
    "webdriverio",
    "wdio",
    "wdio-plugin",
    "wdio-reporter",
    "typescript",
    "wdio-reporter",
    "test examples",
    "E2E UI",
    "examples"
  ],
  "scripts": {
    "_tslint": "Run linter with fix",
    "tslint": "tslint -c tslint.json './src/**/*.ts' -p ./ --fix",
    "_compile": "Compile TypeScript to JavaScript",
    "compile": "tsc",
    "_clean": "Clean workspace",
    "clean": "rm -rf ./lib ./allure-report ./allure-results ./errorShots",
    "_test:ci": "Execute test with CI configuration",
    "test:ci": "wdio wdio.ci.conf.js --spec ./lib/tests/TodoAngularTest.js",
    "_suite": "Execute specific suite with CI configuration",
    "suite": "wdio wdio.ci.conf.js --suite ",
    "_spec": "Execute suite with dev configuration and print logs to console",
    "spec": "PRINT_LOGS_TO_CONSOLE=true; wdio wdio.dev.conf.js --spec ",
    "_build": "Clean workspace, run linter and compile",
    "build": "run-s clean tslint compile",
    "_grid": "Get selenium grid up",
    "grid": "webdriver-manager update; webdriver-manager start",
    "_report": "Create allure report and open it in FireFox",
    "report": "allure generate allure-results --clean -o allure-report &&  open -a firefox allure-report/index.html"
  },
  "dependencies": {
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.0",
    "@types/webdriverio": "^4.10.1",
    "allure-commandline": "^2.5.0",
    "npm-run-all": "^4.1.2",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-eslint-rules": "^5.1.0",
    "tslint-microsoft-contrib": "^5.0.3",
    "typescript": "^2.8.1",
    "wdio-allure-reporter": "^0.6.0",
    "wdio-mocha-framework": "^0.5.13",
    "webdriver-manager": "^12.0.6",
    "webdriverio": "^4.12.0",
    "wdio-allure-ts": "git+https://github.com/cloudinary/wdio-allure-ts.git"
  }
}
