{
  "compilerOptions": {
    "types": ["@wdio/mocha-framework"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "outDir": "lib/"
  },

  "compileOnSave": false
}
